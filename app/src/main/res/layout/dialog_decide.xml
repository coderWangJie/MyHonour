<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="标题"
        android:textSize="18sp"
        android:textColor="#969393" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:text="发现新版本，是否马上升级？"
        android:textSize="14sp" />

    <View
        style="@style/line_separate_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_bl_radius"
            android:padding="10dp"
            android:text="@string/cancel"
            android:textColor="@drawable/selector_text_dialog"
            android:textSize="16sp" />

        <View
            style="@style/line_separate_vertical" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_br_radius"
            android:padding="10dp"
            android:text="@string/confirm"
            android:textColor="@drawable/selector_text_dialog"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>
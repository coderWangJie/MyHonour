<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_marquee1"
        style="@style/textview_common"
        android:layout_width="200dp"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="This is a sample that Marquee working in a TextView ." />
    <TextView
        android:id="@+id/tv_marquee2"
        style="@style/textview_common"
        android:ellipsize="marquee"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:text="This is a sample that Marquee working in a TextView." />

    <Button
        android:id="@+id/btn_marqueeInListView"
        style="@style/button_long"
        android:text="Marquee在ListView中" />
</LinearLayout>

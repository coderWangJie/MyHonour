<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp">

            <Button
                android:id="@+id/btn_1"
                style="@style/button_long"
                android:text="HintDialog1" />

            <Button
                android:id="@+id/btn_2"
                style="@style/button_long"
                android:text="HintDialog2" />

            <Button
                android:id="@+id/btn_3"
                style="@style/button_long"
                android:text="HintDialog3" />

            <Button
                android:id="@+id/btn_4"
                style="@style/button_long"
                android:text="DecideDialog1" />

            <Button
                android:id="@+id/btn_5"
                style="@style/button_long"
                android:text="DecideDialog2" />

            <Button
                android:id="@+id/btn_6"
                style="@style/button_long"
                android:text="DecideDialog3" />

            <Button
                android:id="@+id/btn_7"
                style="@style/button_long"
                android:text="Bottom PopupDialog" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>

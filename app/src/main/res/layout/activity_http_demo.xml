<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="15dp"
            android:paddingLeft="15dp"
            android:gravity="center_horizontal"
            android:paddingRight="15dp">

            <Button
                android:id="@+id/btn_stringRequest1"
                style="@style/button_long"
                android:text="StringRequest1" />

            <Button
                android:id="@+id/btn_stringRequest2"
                style="@style/button_long"
                android:text="StringRequest2" />

            <Button
                android:id="@+id/btn_imageRequest"
                style="@style/button_long"
                android:text="ImageRequest加载图片" />

            <ImageView
                android:id="@+id/img_request"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/btn_imageLoader"
                style="@style/button_long"
                android:text="ImageLoader加载图片" />

            <ImageView
                android:id="@+id/img_loader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_marginTop="15dp"/>

            <Button
                android:id="@+id/btn_networkImageView"
                style="@style/button_long"
                android:text="NetworkImageView加载图片" />

            <ImageView
                android:id="@+id/img_networkImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@null"
                android:layout_marginTop="15dp"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>

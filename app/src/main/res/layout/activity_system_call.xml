<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <include layout="@layout/layout_titlebar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                style="@style/layout"
                android:background="#a6b0e8d0"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_phone1"
                    style="@style/editText_common"
                    android:hint="输入号码"
                    android:inputType="phone" />

                <Button
                    android:id="@+id/btn_SysCall1"
                    style="@style/button_long"
                    android:text="调用系统电话(只打开拨号盘并带入特定号码)" />
            </LinearLayout>

            <LinearLayout
                style="@style/layout"
                android:background="#a6cdb9de"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/et_phone2"
                    style="@style/editText_common"
                    android:hint="输入号码"
                    android:inputType="phone" />

                <Button
                    android:id="@+id/btn_SysCall2"
                    style="@style/button_long"
                    android:text="调用系统电话(直接拨出)" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_Contract"
                style="@style/button_long"
                android:text="通讯录相关" />

            <Button
                android:id="@+id/btn_Camera"
                style="@style/button_long"
                android:text="系统拍照" />

            <Button
                android:id="@+id/btn_Video"
                style="@style/button_long"
                android:text="系统录视频" />

            <Button
                android:id="@+id/btn_audio"
                style="@style/button_long"
                android:text="系统录音频" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>

<resources>

    <!-- thid style is used for MyDialog with radius -->
    <style name="MyDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
    </style>

    <!-- layout 根布局 -->
    <style name="layout_root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#F5F5F5</item>
    </style>

    <!--  -->
    <style name="layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:padding">15dp</item>
    </style>

    <!-- 水平分割线 -->
    <style name="line_separate_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#C1B9B9</item>
    </style>

    <!-- 竖直分隔线 -->
    <style name="line_separate_vertical">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#C1B9B9</item>
    </style>

    <!--  -->
    <style name="textview_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_radius</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:padding">10dp</item>
    </style>

    <!--  -->
    <style name="button_long">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_button_common</item>
        <item name="android:textColor">@drawable/selector_text_common</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 输入框 -->
    <style name="editText_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/shape_radius</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 输入框 -->
    <style name="myToggleButton">
        <item name="android:layout_width">55dp</item>
        <item name="android:layout_height">35dp</item>
        <item name="android:padding">10dp</item>
    </style>

</resources>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_hintDialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_radius"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="10dp"
        android:text="提示标题"
        android:textSize="18sp"
        android:textColor="#969393"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:maxHeight="400dp"
        android:padding="20dp"
        android:scrollbars="horizontal|vertical"
        android:text="这里显示提示内容..."
        android:textSize="14sp" />

    <View style="@style/line_separate_horizontal" />

    <Button
        android:id="@+id/btn_iknow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_b_radius"
        android:padding="10dp"
        android:text="确定"
        android:textColor="@drawable/selector_text_dialog"
        android:textSize="16sp" />

</LinearLayout>